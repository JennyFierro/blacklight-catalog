<%# [Devise-4.7.3 Overwrite] Adds login links for Shibboleth and Affiliate %>
<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.log_in'), new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.sign_up'), new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.forgot_password'), new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.not_receive_conf'), new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.not_receive_unlock'), new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider == "Shibboleth" %>
      <%= link_to t('devise.emory_login'), new_user_shib_session_path %><br />
    <% else %>
      <%= link_to t('devise.emory_login'), omniauth_authorize_path(resource_name, provider) %><br />
    <% end %>
  <% end %>
  <%= link_to t('devise.affiliate_login'), alma_social_login_url(redirect_to: session[:requested_page]) %>
<% end %>
